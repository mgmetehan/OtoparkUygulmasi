
@{
    ViewBag.Title = "AracGoster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>ARAC KAYIT</h4>
                <p class="center light">Arac Kayıt</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <input placeholder="Araç Kime Ait - ID" name="kisiId" type="number" class="">
                            </div>
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input placeholder="Araç Bilgileriniz" name="arac_plaka" type="text" class="">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input placeholder="Markası" name="aracMarka" type="text" class="">
                            </div>
                            <div class="input-field col s6">
                                <i class="material-icons prefix">people_outline</i>
                                <input placeholder="Rengi" name="aracRenk" type="text" class="">
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button type="submit" class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Aracınızı Kayıt Edin !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
