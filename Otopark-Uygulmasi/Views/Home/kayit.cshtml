@{
    ViewBag.Title = "kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>KAYIT</h4>
                <p class="center light">Araç Kayıt</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input placeholder="Ad" name="kisiAd" type="text" class="validate">
                            </div>
                            <div class="input-field col s6">
                                <input placeholder="Soyad" name="kisiSoyad" type="text" class="validate">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">people_outline</i>
                                <input placeholder="Tc" name="kisiTc" type="number" class="validate">
                            </div>
                            <div class="input-field col s6">
                                <input placeholder="Tel No" name="kisiTelNo" type="number" class="validate">
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">location_on</i>
                                <input placeholder="Adres" placeholder="Adres" name="Adres" type="text" class="validate">
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button type="submit" class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
