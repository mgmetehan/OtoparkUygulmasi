@model Otopark_Uygulmasi.Models.db.giris

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{<fieldset>

        <legend>Kullanıcı Giriş Ekranı</legend>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <h3 class="mb-5 ">Sign in</h3>

                                <div class="form-outline mb-4">

                                    @Html.LabelFor(a => a.kullaniciAd)
                                    @Html.TextBoxFor(a => a.kullaniciAd)
                                    @Html.ValidationMessageFor(a => a.kullaniciAd)

                                </div>

                                <div class="form-outline mb-4">
                                    @Html.LabelFor(a => a.kullaniciSifre)
                                    @Html.PasswordFor(a => a.kullaniciSifre)
                                    @Html.ValidationMessageFor(a => a.kullaniciSifre)
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"> Remember password </label>
                                </div>
                                    <button class="btn btn-primary btn-lg justify-content-center align-items-center" type="submit">Login</button>
                                <hr class="my-4">
                                <div class="col-md-5 d-flex justify-content-center" style="padding-left: 400px;">
                                    <button class="btn btn-lg btn-primary" style="background-color: #dd4b39;"
                                            type="submit">
                                        <i class="fab fa-google me-2"></i> Sign in with google
                                    </button>
                                    <button class="btn btn-lg btn-primary mb-2" style="background-color: #3b5998;"
                                            type="submit">
                                        <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </fieldset>
}


